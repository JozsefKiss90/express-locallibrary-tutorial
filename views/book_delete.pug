extends layout

block content
  h1 #{title}: #{books.title}
 
  if book_instance.length

    p #[strong Delete the following book instances before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 BooksInstances

      dl
      each instance in book_instance
        dt
          a(href=instance.url) #{instance.book}
      

  else
    p Do you really want to delete this BookInstance?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(name='bookid', required='true', value=books._id )

      button.btn.btn-primary(type='submit') Delete